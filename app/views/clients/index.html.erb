<header class="clearfix">
  <h2 class="pull-left">Clients</h2>
  <%= link_to 'New Client', new_client_path, class: "btn btn-success btn-lg pull-right" %>
</header>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>URN</th>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>

      <tr id="<%= client.urn %>" class="h-card">
        <td class="p-uid" id="urn--<%= client.urn %>">
          <%= client.urn %>
        </td>
        <td class="p-name" id="name--<%= client.name %>">
          <%= client.name %>
        </td>
        <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>

    <% end %>
  </tbody>
</table>
