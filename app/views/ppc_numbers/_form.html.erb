<%= form_for [location, ppc_number], html: {role: "form"} do |f| %>

  <div class="form-group col-md-4">
    <%= f.label :cpm_code %><br>
    <%= f.text_field :cpm_code, class: "form-control", required: true %>
  </div>
  <div class="form-group col-md-4">
    <%= f.label :number %><br>
    <%= f.text_field :number, class: "form-control", required: true %>
  </div>
  <div class="form-group col-md-4">
    <%= f.label :notes %><br>
    <%= f.text_field :notes, class: "form-control" %>
  </div>
  <div class="form-group col-md-4">
    <%= f.submit "Update PPC Number", class: "btn btn-primary pull-left" %>
  </div>

<% end %>