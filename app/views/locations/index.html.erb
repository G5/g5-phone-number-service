<div class="page-header">
  <div class="container">
    <h1>Locations</h1>
  </div>
</div>

<div class="container">

  <%= render 'new_form' %>


  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>URN</th>
        <th>Name</th>
        <th>Default Number</th>
        <th>Mobile Number</th>
        <th>PPC Number</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>

      <% @locations.each do |location| %>
        <%= render 'edit_form', location: location %>
      <% end %>

    </tbody>
  </table>
</div>