<div class="page-header">
  <div class="container">
    <h1>Locations</h1>
  </div>
</div>

<div class="container">

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>


  <%= render 'new_form' %>

  <%= form_tag locations_update_path, id: "update_locations" do %>
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>URN</th>
          <th>Name</th>
          <th>Default Number</th>
          <th>Mobile Number</th>
          <th>PPC Number</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <%= render 'edit_form', location: location %>
        <% end %>
      </tbody>
    </table>

    <div class="actions">
      <%= submit_tag "Save", class: "btn btn-default" %>
    </div>
  <% end %>

</div>
