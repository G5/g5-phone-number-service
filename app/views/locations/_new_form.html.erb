<div class="panel panel-primary">
  <p class="panel-heading">Add a new location</p>
  <div class="panel-body">
    <%= form_for @location, html: {role: 'form'} do |f| %>

      <% if @location.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

          <ul>
          <% @location.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">

        <div class="col-md-2 form-group">
          <%= f.label :urn, "URN" %>
          <%= f.text_field :urn, class: "form-control", required: true %>
        </div>
        <div class="col-md-2 form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
        <div class="col-md-2 form-group">
          <%= f.label :default_number, "Default Number" %>
          <%= f.text_field :default_number, class: "form-control", required: true %>
        </div>
        <div class="col-md-2 form-group">
          <%= f.label :mobile_number, "Mobile Number" %>
          <%= f.text_field :mobile_number, class: "form-control" %>
        </div>
        <div class="col-md-2 form-group">
          <%= f.label :ppc_number, "PPC Number" %>
          <%= f.text_field :ppc_number, class: "form-control" %>
        </div>
        <div class="col-md-2 actions">
          <%= f.submit(class: "btn btn-primary") %>
        </div>

      </div>
    <% end %>
  </div>
</div>