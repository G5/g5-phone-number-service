<%= form_for @location, html: {role: "form"} do |f| %>

  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :urn %><br>
    <%= f.text_field :urn, class: "form-control", placeholder: "g5-cl-xxxxxxx-name", pattern: "g5-cl-[A-Za-z0-9]{7,8}-[A-Za-z0-9\-]+", title: "Format should be g5-cl-xxxxxxx(x)-name" %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :default_number %><br>
    <%= f.text_field :default_number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :mobile_number %><br>
    <%= f.text_field :mobile_number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :ppc_number %><br>
    <%= f.text_field :ppc_number, class: "form-control" %>
  </div>

  <div class="actions clearfix">
    <%= f.submit(class: "btn btn-success pull-right") %>
    <%= link_to 'Cancel', locations_path, class: "btn pull-left" %>
  </div>

<% end %>
